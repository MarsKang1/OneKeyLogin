<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/umcsdk_account_item_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/umcsdk_btn_height"
        android:background="@color/color_smsbg"
        android:clickable="true">

        <TextView
            android:id="@+id/umcsdk_account_item_text"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/umcsdk_loginbtn_left"
            android:background="@color/color_actionbar_bg"
            android:drawableLeft="@drawable/umcsdk_mobile"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/umcsdk_account_mobile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/umcsdk_account_item_text"
            android:text="@string/umcsdk_local_mobile"
            android:textColor="#333333"
            android:textSize="@dimen/umcsdk_font_twenteen"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/umcsdk_account_item_waitbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/umcsdk_loginbtn_left"
            android:src="@drawable/umcsdk_load_complete_b" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#c6c6c6" />
    </RelativeLayout>


</LinearLayout>

