<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/umcsdk_login_btn_bg"
    android:minHeight="@dimen/umcsdk_btn_height" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/umcsdk_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/umcsdk_login_owner_number"
            android:textColor="@color/color_login_text"
            android:textSize="@dimen/umcsdk_font_seventeen" />

        <TextView
            android:id="@+id/umcsdk_free_sms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="快捷登录"
            android:textColor="@color/color_login_text"
            android:textSize="@dimen/umcsdk_font_seventeen"
            android:visibility="gone" />
    </LinearLayout>

    <com.cmic.sso.sdk.widget.LoadingImageVIew
        android:id="@+id/umcsdk_waitbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/umcsdk_dimen_ten"
        android:background="@drawable/umcsdk_load_dot_white"
        android:visibility="gone" />

</RelativeLayout>