<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/umcsdk_login_head"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/color_blue_text">

        <Button
            android:id="@+id/umcsdk_title_return_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/umcsdk_dimen_ten"
            android:background="@drawable/umcsdk_return_bg"/>

        <TextView
            android:id="@+id/umcsdk_title_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:text="@string/umcsdk_login"
            android:textColor="@color/color_login_text"
            android:textSize="@dimen/umcsdk_font_seventeen" />

        <TextView
            android:id="@+id/umcsdk_title_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/umcsdk_dimen_ten"
            android:text="@string/umcsdk_switch_account"
            android:visibility="gone"
            android:textColor="@color/color_blue_text"
            android:textSize="@dimen/umcsdk_font_sixteen" />
    </RelativeLayout>

    <View
        android:id="@+id/umcsdk_title_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a9a9a9" />

</LinearLayout>